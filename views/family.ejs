<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Patient Records</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Link to your stylesheet -->
</head>
<body>
    <header>
        <h1>Manage Patient Records</h1>
    </header>
    <main>
        <!-- Add Patient Form -->
        <section>
            <h2>Add New Patient</h2>
            <form action="/patients/add" method="POST">
                <label for="first_name">First Name:</label>
                <input type="text" id="first_name" name="first_name" required>
                
                <label for="last_name">Last Name:</label>
                <input type="text" id="last_name" name="last_name" required>
                
                <label for="phone_number">Phone Number:</label>
                <input type="text" id="phone_number" name="phone_number" required>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
                
                <label for="birth_date">Date of Birth:</label>
                <input type="date" id="birth_date" name="birth_date" required>

                
                <label for="allergies">Allergies:</label>
                <input type="text" id="allergies" name="allergies">
                
                <button type="submit">Add Patient</button>
            </form>
        </section>

        <!-- List and Manage Patients -->
        <% if (patients && patients.length > 0) { %>
            <h2>Existing Patients</h2>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Date of Birth</th>
                        <th>Allergies</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% patients.forEach(patient => { %>
                        <tr>
                            <form action="/patients/edit/<%= patient.patient_id %>" method="POST">
                                <td>
                                    <input type="text" name="first_name" value="<%= patient.first_name %>" required>
                                </td>
                                <td>
                                    <input type="text" name="last_name" value="<%= patient.last_name %>" required>
                                </td>
                                <td>
                                    <input type="text" name="phone_number" value="<%= patient.phone_number %>" required>
                                </td>
                                <td>
                                    <input type="email" name="email" value="<%= patient.email %>" required>
                                </td>
                                <td>
                                    <input type="date" name="birth_date" value="<%= patient.birth_date %>" required>
                                </td>
                                <td>
                                    <input type="text" name="allergies" value="<%= patient.allergies || '' %>">
                                </td>
                                <td>
                                    <button type="submit">Save</button>
                                    <a href="/patients/delete/<%= patient.patient_id %>" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                                </td>
                            </form>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No patient records found for your account.</p>
        <% } %>
    </main>
</body>
</html>
